{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "strict": true,
    "module": "CommonJS",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2017", "es7", "es6", "ESNext", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
